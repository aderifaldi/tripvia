<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="56dp"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <com.playground.skypass.app.textview.TextViewAutoStyle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_size"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:text="Promo Detail"
            custom:font="@string/regular"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/check_in"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorDarkOrange">
            <com.playground.skypass.app.textview.TextViewAutoStyle
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:text="Check In Now"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:font="@string/regular"/>
        </RelativeLayout>


        <android.support.design.widget.CoordinatorLayout
            android:layout_above="@id/check_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">
                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:contentScrim="@color/colorWhite"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">
                    <RelativeLayout
                        android:id="@+id/containerImage"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax">
                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                    </RelativeLayout>
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_marginTop="2dp"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_point">
                            <com.playground.skypass.app.textview.TextViewAutoStyle
                                android:textSize="16sp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:textColor="@color/colorWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                custom:font="@string/regular"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="2dp"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_level">
                            <com.playground.skypass.app.textview.TextViewAutoStyle
                                android:textSize="16sp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:textColor="@color/colorWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                custom:font="@string/regular"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/activity_horizontal_margin">

                            <android.support.percent.PercentRelativeLayout
                                android:id="@+id/bottomMenu"
                                android:layout_width="match_parent"
                                android:layout_height="56dp">

                                <RelativeLayout
                                    android:id="@+id/infoStartDate"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="50%">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:orientation="vertical">

                                        <com.playground.skypass.app.textview.TextViewAutoStyle
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorGrey"
                                            android:textSize="@dimen/body_size"
                                            android:text="Start at:"
                                            custom:font="@string/regular"/>
                                        <com.playground.skypass.app.textview.TextViewAutoStyle
                                            android:id="@+id/date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorDarkOrange"
                                            android:text="24/Aug/2017"
                                            android:textSize="@dimen/big_size"
                                            custom:font="@string/medium"/>

                                    </LinearLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_toRightOf="@id/infoStartDate"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="50%">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:orientation="vertical">

                                        <com.playground.skypass.app.textview.TextViewAutoStyle
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorGrey"
                                            android:textSize="@dimen/body_size"
                                            android:text="End at:"
                                            custom:font="@string/regular"/>
                                        <com.playground.skypass.app.textview.TextViewAutoStyle
                                            android:id="@+id/dateEnd"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorDark"
                                            android:text="24/Aug/2017"
                                            android:textSize="@dimen/big_size"
                                            custom:font="@string/medium"/>

                                    </LinearLayout>


                                </RelativeLayout>

                            </android.support.percent.PercentRelativeLayout>

                            <com.playground.skypass.app.textview.TextViewAutoStyle
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/small_size"
                                custom:font="@string/regular"/>

                            <com.playground.skypass.app.textview.TextViewAutoStyle
                                android:layout_marginTop="4dp"
                                android:id="@+id/desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorDark"
                                android:textSize="@dimen/body_size"
                                custom:font="@string/regular"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp">
                                <fragment
                                    android:id="@+id/map"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    class="com.google.android.gms.maps.SupportMapFragment" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btnDirection"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@color/colorWhite">
                                <com.playground.skypass.app.textview.TextViewAutoStyle
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorDarkOrange"
                                    android:textSize="@dimen/small_size"
                                    android:text="Direction"
                                    android:layout_centerInParent="true"
                                    custom:font="@string/regular"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_horizontal_margin">

                            <android.support.percent.PercentRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="56dp">

                                <RelativeLayout
                                    android:id="@+id/infoPoint"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="50%">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:orientation="vertical">

                                        <com.playground.skypass.app.textview.TextViewAutoStyle
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorGrey"
                                            android:textSize="@dimen/body_size"
                                            android:text="Point:"
                                            android:layout_gravity="center_horizontal"
                                            android:gravity="center"
                                            custom:font="@string/regular"/>
                                        <com.playground.skypass.app.textview.TextViewAutoStyle
                                            android:id="@+id/point"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorDark"
                                            android:text="24/Aug/2017"
                                            android:layout_gravity="center_horizontal"
                                            android:gravity="center"
                                            android:textSize="@dimen/big_size"
                                            custom:font="@string/medium"/>

                                    </LinearLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_toRightOf="@id/infoPoint"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="50%">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:orientation="vertical">

                                        <com.playground.skypass.app.textview.TextViewAutoStyle
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorGrey"
                                            android:textSize="@dimen/body_size"
                                            android:layout_gravity="center_horizontal"
                                            android:gravity="center"
                                            android:text="Xp:"
                                            custom:font="@string/regular"/>
                                        <com.playground.skypass.app.textview.TextViewAutoStyle
                                            android:id="@+id/xp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorDark"
                                            android:text="24/Aug/2017"
                                            android:layout_gravity="center_horizontal"
                                            android:gravity="center"
                                            android:textSize="@dimen/big_size"
                                            custom:font="@string/medium"/>

                                    </LinearLayout>


                                </RelativeLayout>

                            </android.support.percent.PercentRelativeLayout>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>

</LinearLayout>
